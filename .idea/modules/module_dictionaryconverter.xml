<?xml version="1.0" encoding="UTF-8"?>
<project name="module_dictionaryconverter" default="compile.module.dictionaryconverter">
  <dirname property="module.dictionaryconverter.basedir" file="${ant.file.module_dictionaryconverter}"/>
  
  <property name="module.jdk.home.dictionaryconverter" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.dictionaryconverter" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.dictionaryconverter" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.dictionaryconverter" value="-encoding UTF-8 -source 1.8 -target 1.8 ${compiler.args}"/>
  
  <property name="dictionaryconverter.output.dir" value="${module.dictionaryconverter.basedir}/../../target/scala-2.10/classes"/>
  <property name="dictionaryconverter.testoutput.dir" value="${module.dictionaryconverter.basedir}/../../target/scala-2.10/test-classes"/>
  
  <path id="dictionaryconverter.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="dictionaryconverter.module.production.classpath">
    <path refid="${module.jdk.classpath.dictionaryconverter}"/>
    <path refid="library.sbt:_org.scala-lang:scala-library:2.10.2:jar.classpath"/>
  </path>
  
  <path id="dictionaryconverter.runtime.production.module.classpath">
    <pathelement location="${dictionaryconverter.output.dir}"/>
    <path refid="library.sbt:_org.scala-lang:scala-library:2.10.2:jar.classpath"/>
  </path>
  
  <path id="dictionaryconverter.module.classpath">
    <path refid="${module.jdk.classpath.dictionaryconverter}"/>
    <pathelement location="${dictionaryconverter.output.dir}"/>
    <path refid="library.sbt:_junit:junit:4.12:jar.classpath"/>
    <path refid="library.sbt:_org.scalatest:scalatest_2.10:2.0:jar.classpath"/>
    <path refid="library.sbt:_org.scala-lang:scala-reflect:2.10.2:jar.classpath"/>
    <path refid="library.sbt:_org.scala-lang:scala-library:2.10.2:jar.classpath"/>
    <path refid="library.sbt:_org.hamcrest:hamcrest-core:1.3:jar.classpath"/>
  </path>
  
  <path id="dictionaryconverter.runtime.module.classpath">
    <pathelement location="${dictionaryconverter.testoutput.dir}"/>
    <pathelement location="${dictionaryconverter.output.dir}"/>
    <path refid="library.sbt:_junit:junit:4.12:jar.classpath"/>
    <path refid="library.sbt:_org.scalatest:scalatest_2.10:2.0:jar.classpath"/>
    <path refid="library.sbt:_org.scala-lang:scala-reflect:2.10.2:jar.classpath"/>
    <path refid="library.sbt:_org.scala-lang:scala-library:2.10.2:jar.classpath"/>
    <path refid="library.sbt:_org.hamcrest:hamcrest-core:1.3:jar.classpath"/>
  </path>
  
  
  <patternset id="excluded.from.module.dictionaryconverter">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.dictionaryconverter">
    <patternset refid="excluded.from.module.dictionaryconverter"/>
  </patternset>
  
  <path id="dictionaryconverter.module.sourcepath">
    <dirset dir="${module.dictionaryconverter.basedir}/../../../dictionaryconverter">
      <include name="src/main/java"/>
      <include name="src/main/scala"/>
    </dirset>
  </path>
  
  <path id="dictionaryconverter.module.test.sourcepath">
    <dirset dir="${module.dictionaryconverter.basedir}/../../../dictionaryconverter">
      <include name="src/test/java"/>
      <include name="src/test/scala"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.dictionaryconverter" depends="compile.module.dictionaryconverter.production,compile.module.dictionaryconverter.tests" description="Compile module dictionaryconverter"/>
  
  <target name="compile.module.dictionaryconverter.production" depends="register.custom.compilers" description="Compile module dictionaryconverter; production classes">
    <mkdir dir="${dictionaryconverter.output.dir}"/>
    <javac2 destdir="${dictionaryconverter.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.dictionaryconverter}/javac">
      <compilerarg line="${compiler.args.dictionaryconverter}"/>
      <bootclasspath refid="dictionaryconverter.module.bootclasspath"/>
      <classpath refid="dictionaryconverter.module.production.classpath"/>
      <src refid="dictionaryconverter.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.dictionaryconverter"/>
    </javac2>
    
    <copy todir="${dictionaryconverter.output.dir}">
      <fileset dir="${module.dictionaryconverter.basedir}/../../src/main/java">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
      <fileset dir="${module.dictionaryconverter.basedir}/../../src/main/scala">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.dictionaryconverter.tests" depends="register.custom.compilers,compile.module.dictionaryconverter.production" description="compile module dictionaryconverter; test classes" unless="skip.tests">
    <mkdir dir="${dictionaryconverter.testoutput.dir}"/>
    <javac2 destdir="${dictionaryconverter.testoutput.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.dictionaryconverter}/javac">
      <compilerarg line="${compiler.args.dictionaryconverter}"/>
      <bootclasspath refid="dictionaryconverter.module.bootclasspath"/>
      <classpath refid="dictionaryconverter.module.classpath"/>
      <src refid="dictionaryconverter.module.test.sourcepath"/>
      <patternset refid="excluded.from.compilation.dictionaryconverter"/>
    </javac2>
    
    <copy todir="${dictionaryconverter.testoutput.dir}">
      <fileset dir="${module.dictionaryconverter.basedir}/../../src/test/java">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
      <fileset dir="${module.dictionaryconverter.basedir}/../../src/test/scala">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="clean.module.dictionaryconverter" description="cleanup module">
    <delete dir="${dictionaryconverter.output.dir}"/>
    <delete dir="${dictionaryconverter.testoutput.dir}"/>
  </target>
</project>